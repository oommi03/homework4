<!- view: index.ejs -->
<% include ./header %>
<div class='container'>
	<h2>
		<%= title %>
	</h2>
</div>
</div>
<form method="POST" action="/api/user">
	<div class="container">
		<label>Id :</label>
		<br>
		<input type="number" name="id" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Name :</label>
		<br> 
		<input type="text" name="name" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Age :</label>
		<br>
		<input type="number" name="age" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Email :</label>
		<br>
		<input type="text" name="email" class="form-control">
		<br>
		<br>
	</div>
	<div class="container">
		<input type="submit" value="Add" class="btn btn-info"> &nbsp&nbsp&nbsp&nbspPlease Get Token first !!!!!
	</div>
</form>
<form method="GET" action="/login">
	<div class="container">
		<input type="submit" value="Get Token" class="btn btn-info">
	</div>
</form>
</div>

<p>
	<br>
	<br>
	<form>
	<div class 'contrainer'>
		<ul class="list-group">
			<% users.forEach( function(user) { %>
				<li class="list-group-item" style="margin-left: 70px; margin-right: 70px;">ID :
					<%= user.id %>&nbsp;&nbsp;&nbsp;&nbsp; Name :
						<%= user.name %>&nbsp;&nbsp;&nbsp;&nbsp; Age :
							<%= user.age %>&nbsp;&nbsp;&nbsp;&nbsp; Email :
								<%= user.email %>
				</li>
				<% }) %>
		</ul>
	</div>
</form>
	<br>
	<br>
</p>
<div class='container'>
	<h2>Change Data</h2>
</div>
</div>
<form method="POST" action="/api/user/:userId/change">
	<div class="container">
		<label>Id :</label>
		<br>
		<input type="number" name="id" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Name :</label>
		<br>
		<input type="text" name="name" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Age :</label>
		<br>
		<input type="number" name="age" class="form-control">
		<br>
	</div>
	<div class="container">
		<label>Email :</label>
		<br>
		<input type="text" name="email" class="form-control">
		<br>
		<br>
	</div>
	<div class="container">
		<input type="submit" value="Change" class="btn btn-info">
	</div>
</form>
</div>



<br>
<br>
<div class='container'>
	<h2>DELETE</h2>
	<form method="post" action="/api/user/:userId">
		<label>ID : </label>
		<input type="number" class="form-control" name="id"><br>
		<input type="submit" value="delete" name="Del" class="btn btn-info	">
	</form>
</div>

<% include ./footer %>